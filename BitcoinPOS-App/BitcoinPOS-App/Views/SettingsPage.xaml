<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BitcoinPOS_App.Views.SettingsPage"
             Title="Opções">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout x:Name="SettingsStack" Margin="10">
            <Label Text="Extended Public Key (BIP32)" />
            <Editor x:Name="EdtXPub" IsSpellCheckEnabled="False" IsEnabled="False" Text="{Binding ExtendedPublicKey}" HeightRequest="200"/>
            <Button Style="{StaticResource ButtonPrimary}" Text="Salvar" Clicked="Save_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>