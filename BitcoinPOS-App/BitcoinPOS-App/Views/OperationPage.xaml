<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BitcoinPOS_App.Views.OperationPage">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <!-- Place new controls here -->
            <BoxView x:Name="BoxText" HeightRequest="20" />
            <StackLayout x:Name="BoxNumbers">
                <StackLayout Padding="10" Orientation="Horizontal">
                    <Button Text="7" />
                    <Button Text="8" />
                    <Button Text="9" />
                </StackLayout>
                <StackLayout Padding="10" Orientation="Horizontal">
                    <Button Text="4" />
                    <Button Text="5" />
                    <Button Text="6" />
                </StackLayout>
                <StackLayout Padding="10" Orientation="Horizontal">
                    <Button Text="3" />
                    <Button Text="2" />
                    <Button Text="1" />
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>