<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BitcoinPOS_App.Views.PaymentFinalizationPage"
             Title="Finalização de Pgto">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding ActionText}" Style="{StaticResource HeaderText}" />
            <Image HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"
                   Source="{Binding Payment, Mode=OneWay, Converter={StaticResource QrCodeConverter}}" />
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                <Button Style="{StaticResource ButtonPrimary}" Text="Cancelar" Clicked="Cancel_Clicked" />
                <Button Margin="25, 0, 0, 0" Style="{StaticResource ButtonPrimary}" Text="Ok" Clicked="Ok_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>